{
  "name": "@cross-platform/monorepo",
  "version": "1.0.0",
  "description": "跨端框架 Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node build.js",
    "build:prod": "node build.js --prod",
    "build:pkg": "node build.js --package",
    "dev": "pnpm -r run dev",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx}"
  },
  "keywords": [
    "cross-platform",
    "react",
    "react-native",
    "mini-program",
    "h5"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/lodash-es": "4.17.12",
    "@types/node": "22.13.10",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.4",
    "babel-preset-taro": "^4.1.6",
    "eslint": "9.30.1",
    "lodash-es": "4.17.21",
    "prettier": "^3.6.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "vite": "6.0.0",
    "vitest": "2.1.5"
  },
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@tarojs/plugin-platform-alipay": "^4.1.6",
    "@tarojs/plugin-platform-tt": "^4.1.6",
    "@tarojs/plugin-platform-weapp": "^4.1.6",
    "@tarojs/react": "^4.1.6",
    "@tarojs/runtime": "^4.1.6",
    "@tarojs/taro": "^4.1.6",
    "immer": "^10.1.1"
  }
}